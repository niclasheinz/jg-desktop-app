{
    "name": "jg-desktop-app",
    "version": "1.0.10",
    "description": "The official Jubla Glattbrugg Desktop App.",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder",
      "lint": "eslint .",
      "test": "jest",
      "build:win": "electron-builder --win",
      "build:mac": "electron-builder --mac",
      "build:linux": "electron-builder --linux"
    },
    "keywords": [
      "electron",
      "desktop",
      "app"
    ],
    "author": "Your Name",
    "license": "MIT",
    "homepage": "https://jublaglattbrugg.ch",
    "repository": {
      "type": "git",
      "url": "git+https://github.com/niclasheinz/jg-desktop-app.git"
    },
    "bugs": {
      "url": "https://github.com/niclasheinz/jg-desktop-app/issues"
    },
    "dependencies": {
      "electron": "^25.3.0",
      "electron-updater": "^6.3.4"
    },
    "devDependencies": {
      "electron-builder": "^24.6.0",
      "eslint": "^8.20.0",
      "jest": "^29.0.0"
    },
    "build": {
      "appId": "com.jublaglattbrugg.desktop",
      "productName": "Jubla Glattbrugg Desktop App",
      "files": [
        "main.js",
        "build/**/*",
        "app/**/*"
      ],
      "icon": "build/icons/icon.ico",
      "linux": {
        "target": [
          {
            "target": "AppImage",
            "arch": [
              "x64"
            ]
          }
        ]
      },
      "mac": {
        "target": "dmg"
      },
      "win": {
        "target": "nsis",
        "icon": "build/icons/icon.ico"
      },
      "publish": [
        {
          "provider": "github",
          "owner": "niclasheinz",
          "repo": "jg-desktop-app"
        }
      ]
    },
    "eslintConfig": {
      "extends": "eslint:recommended",
      "env": {
        "node": true,
        "es6": true
      },
      "rules": {
        "no-console": "off"
      }
    },
    "jgdesktop": {
      "protocols": [
        {
          "name": "Jubla Glattbrugg Protocol",
          "schemes": ["jgdesktop"]
        }
      ]
    }
  }
  