{
    "name": "jg-desktop",
    "version": "1.0.10",
    "description": "The official desktop app for Jubla Glattbrugg",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "build": "electron-builder",
      "build:win": "electron-builder --win",
      "build:mac": "electron-builder --mac",
      "build:linux": "electron-builder --linux"
    },
    "repository": {
      "type": "git",
      "url": "git+https://gitlab.com/niclasheinz/jg-desktop-app.git"
    },
    "author": {
      "name": "Niclas Heinz",
      "email": "niclas.heinz@hpost.net"
    },
    "license": "ISC",
    "bugs": {
      "url": "https://gitlab.com/niclasheinz/jg-desktop-app/issues"
    },
    "homepage": "https://gitlab.com/niclasheinz/jg-desktop-app#readme",
    "devDependencies": {
      "electron": "v31.3.0",
      "electron-builder": "^24.13.3"
    },
    "dependencies": {
      "i18next": "^23.12.2",
      "electron-updater": "^5.0.0",
      "electron-log": "^4.4.7"
    },
    "build": {
      "appId": "ch.niclasheinz.jg-desktop",
      "productName": "JG Desktop",
      "linux": {
        "target": [
          "AppImage",
          "deb"
        ],
        "icon": "build/icons/icon.png",
        "category": "Utility"
      },
      "mac": {
        "target": [
          "dmg",
          "zip"
        ],
        "icon": "build/icons/icon.png",
        "category": "public.app-category.utilities"
      },
      "win": {
        "target": [
          "nsis",
          "zip"
        ],
        "icon": "build/icons/icon.png",
        "publisherName": "Niclas Heinz"
      },
      "protocols": [
        {
          "name": "Jubla Glattbrugg Protocol",
          "schemes": ["jgdesktop"]
        }
      ],
      "publish": [
        {
          "provider": "github",
          "owner": "niclasheinz",
          "repo": "jg-desktop-app"
        }
      ],
      "files": [
        "main.js",
        "build/**/*",
        "app/**/*"
      ]
    }
  }
  